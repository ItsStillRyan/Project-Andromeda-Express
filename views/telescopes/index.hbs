<div id="accordion" class="mt-4">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link btn-primary" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                    aria-controls="collapseOne">
                     Search Filters â‡“
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <form method="GET">
                    {{{form}}}
                    <input type="submit" class="btn btn-info" value="Search" />
                </form>
            </div>
        </div>
    </div>
</div>


<div style="margin-top: 5%;">
    {{#each telescopes}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src={{this.image_url}} alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.stock}}</p>
            <a href="/telescope/{{this.id}}/update" class="btn btn-info">More Info</a>
        </div>
        <div class="card-body">
            <a href="/telescope/{{this.id}}/update" class="btn btn-warning">Update</a>
